{
  "entryFile": "./index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": [
    "./app/http/**/*.controller.ts"
  ],
  "spec": {
    "basePath": "api",
    "specVersion": 3,
    "host": null,
    "outputDirectory": "./routes",
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header",
        "scopes" : {
          "root" : "can do",
          "admin" : "can do",
          "user" : "can do"
        }
      }
    }
  },
  "routes": {
    "basePath": "",
    "routesDir": "./routes",
    "authenticationModule": "./app/http/middlewares/auth.ts"
  }
}
